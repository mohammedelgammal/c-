#ifndef CANVAS
#define CANVAS

#include <iostream>
using namespace std;

class Tool
{
public:
    virtual void use(){};
};

class Selection : public Tool
{
public:
    void use() override
    {
        cout << "Draw a Rectangle" << endl;
    }
};

class Line : public Tool
{
public:
    void use() override
    {
        cout << "Draw a Line" << endl;
    }
};

class Eraser : public Tool
{
public:
    void use() override
    {
        cout << "Erase something" << endl;
    }
};

class Canvas
{
public:
    Canvas(Tool *tool) : tool{tool} {};
    void useTool()
    {
        tool->use();
    }

private:
    Tool *tool;
};

#endif // CANVAS