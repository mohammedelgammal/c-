#ifndef PRIORITYQUEUE
#define PRIORITYQUEUE

#include <iostream>

using namespace std;

#include "Queue"
#include "Queue.cpp"

template <typename T>
class PriorityQueue : public Queue<T>
{
public:
    void enqueue(const T value) override
    {
        Array<T> *stack = this->getStack();
        T lastNode;

        stack->insert(value);

        for (int i = stack->length - 2; i >= 0; i--)
        {
            lastNode = (*stack)[i];
            if (value < lastNode)
            {
                (*stack)[i] = value;
                (*stack)[i + 1] = lastNode;
            }
        }
    }
};

#endif // PRIORITYQUEUE
