#ifndef HASHTABLE
#define HASHTABLE

#include "LinkedList"
#include <vector>

#include <string>

using std::string;

struct Entry
{
    int key;
    string value;
};

class HashTable
{
public:
    // Constructors
    HashTable(const size_t size);

    // Methods
    int hash(const int key) const;
    void put(const int key, const string value);
    string get(const int key) const;
    void remove(const int key) const;

private:
    size_t size;
    LinkedList<Entry> *array;
};

#endif // HASHTABLE