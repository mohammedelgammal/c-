#ifndef QUEUE
#define QUEUE

#include "Array"
#include "Stack"
#include "Stack.cpp"

template <typename T>
class Queue
{
public:
    // Constructors
    Queue();
    Queue(const T value);
    ~Queue();

    // Methods
    virtual void enqueue(const T value);
    T dequeue();
    T getPeak() const;
    T getBottom() const;
    bool isEmpty() const;
    int getLength() const;
    T &operator[](const int index) const;
    void reverse();
    Array<T> *getStack() const;

private:
    Array<T> *stack;
};

#endif // QUEUE