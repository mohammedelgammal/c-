#ifndef STACK
#define STACK

#include "Array"
#include "Array.cpp"

template <typename T>
class Stack
{
public:
    // Constructors
    Stack();
    Stack<T>(T top);
    ~Stack();

    // Methods
    void push(T el);
    T pop();
    T getPeak() const;
    bool isStackEmpty() const;
    int getLength() const;
    int operator[](int index) const;

private:
    Array<T> *stack = new Array<T>{};
    T top;
};

#endif // STACK