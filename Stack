#ifndef STACK
#define STACK

#include "Array"

class Stack
{
public:
    // Constructors
    Stack();
    Stack(int top);

    // Methods
    void push(int el);
    void pop();
    int getPeek() const;
    bool isStackEmpty() const;
    int getLength() const;
    int operator[](int index) const;

private:
    Array stack;
    int top;
};

#endif // STACK