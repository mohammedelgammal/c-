#ifndef SOLUTION
#define SOLUTION

#include <functional>

using std::function;
using std::max;
using std::string;
using std::unordered_map;
using std::vector;

string maximumOddBinaryNumber(string s) {
  int zeros = 0, ones = 0;
  for (char ch : s)
    if (ch == '0')
      zeros += 1;
    else
      ones += 1;
  string ans;
  while (ones - 1) {
    ans.append("1");
    ones -= 1;
  }
  while (zeros) {
    ans.append("0");
    zeros -= 1;
  }
  return ans.append("1");
}

#endif // SOLUTION