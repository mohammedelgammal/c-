#ifndef ARRAY
#define ARRAY

template <typename T>
class Array
{
public:
    // Constructors
    Array();
    Array(const int length);
    ~Array();

    // Methods
    void insert(const T el);
    void removeAt(const int targetIndex);
    T &operator[](const int targetIndex) const;
    void validateIndex(const int targetIndex) const;
    int indexOf(const T el) const;

    // Variables
    int length;

private:
    int index = 0;
    T *array;
};

#endif // ARRAY