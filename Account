#ifndef ACCOUNT
#define ACCOUNT

#include <iostream>
#include <stdexcept>
using namespace std;

class Account
{
public:
    Account(const int startAmount);
    void deposit(const int amount);
    void withdraw(const int amount);
    int getBalance() const;
    virtual void claimPrize(){};

private:
    int balance;
};

class VIPAccount : public Account
{
public:
    VIPAccount(const int startingAmount) : Account(startingAmount) {}
    void claimPrize() override;
};

class SilverAccount : public Account
{
public:
    SilverAccount(const int startingAmount) : Account(startingAmount) {}
    void claimPrize() override;
};

#endif // ACCOUNT