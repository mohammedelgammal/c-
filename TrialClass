#ifndef TRIAL_CLASS
#define TRIAL_CLASS

class TrialClass
{
public:
    TrialClass() = default;
    explicit TrialClass(const int value);
    explicit TrialClass(const TrialClass &sourceClass);
    void operator++(int value);
    void operator++();

    int getValue() const; // inline keyword is unnecessary -> By default inline
    void setValue(int value);

private:
    int value;
};

#endif // TRIAL_CLASS