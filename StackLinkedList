#ifndef STACKLINKEDLIST
#define STACKLINKEDLIST

#include "LinkedList"
#include "LinkedList.cpp"

template <typename T>
class StackLinkedList
{
public:
    // Constructors
    StackLinkedList();
    StackLinkedList(T node);
    ~StackLinkedList();

    // Methods
    void push(const T node);
    void pop();
    T getPeak() const;
    bool isEmpty() const;
    int getLength() const;
    T operator[](const int index) const;

private:
    LinkedList<T> *stack;
};

#endif // STACKLINKEDLIST