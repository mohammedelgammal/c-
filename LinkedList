#ifndef LINKEDLIST
#define LINKEDLIST

class Node
{
public:
    Node(const int value, Node *next);
    Node *next = nullptr;

private:
    int value;
};

class LinkedList
{
public:
    LinkedList(int value);
    LinkedList();
    ~LinkedList();
    void addFirst(const int value);

private:
    Node *head = nullptr;
};

#endif // LINKEDLIST
