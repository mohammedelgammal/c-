#ifndef LINKEDLIST
#define LINKEDLIST

#include <vector>
using std::vector;

class Node
{
public:
    Node(const int value, Node *next);

private:
    Node *next = nullptr;
    int value;
    friend class LinkedList;
};

class LinkedList
{
public:
    // Constructors
    LinkedList(int value);
    LinkedList();
    ~LinkedList();

    // Methods
    void addFirst(const int value); // O(1) Constant
    vector<int> toArray();
    void addLast(const int value); // O(n) Linear

private:
    Node *head = nullptr;
};

#endif // LINKEDLIST
