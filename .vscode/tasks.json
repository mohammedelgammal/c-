{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C++ Builder & Debugger",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-std=c++20",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "typescript",
      "tsconfig": "ts/tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": "build",
      "label": "TypeScript Builder & Debugger"
    }
  ],
  "version": "2.0.0"
}
