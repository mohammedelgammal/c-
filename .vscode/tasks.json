{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "command": "g++",
      "args": [
        "-g",
        // "-std=c++11",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
